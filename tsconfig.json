{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "removeComments": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@controllers": ["./src/controllers/index.ts"],
      "@controllers/*": ["./src/controllers/*"],
      "@routes": ["./src/routes/index.ts"],
      "@routes/*": ["./src/routes/*"]
    }
  },
  "include": [
    "src/**/*"
  ],"exclude": ["node_modules", "**/*.spec.ts"]
}
